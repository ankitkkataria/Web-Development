<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New Product</title>
    <style>
      form {
        display: flex;
        flex-direction: column;
        width: 25rem;
      }
      button {
        margin-top: 1em;
      }
    </style>
  </head>
  <body>
    <h1>Add New Product</h1>
    <form action="/farms/<%= id %>/products" method="POST">
      <label for="name">Name : </label>
      <input
        type="text"
        name="name"
        id="name"
        placeholder="Enter a name for your fruit,vegetable or dairy product"
      />
      <label for="price">Price : </label>
      <input
        type="number"
        name="price"
        id="price"
        placeholder="Enter per unit price"
      />
      <label for="category">Select Category : </label>
      <select name="category" id="category">
        <!-- <option value="fruit">fruit</option> -->
        <!-- <option value="vegetable">vegetable</option> -->
        <!-- <option value="dairy">dairy</option> -->
        <!-- The for loop below does the same thing and we don't have to manually delete or add options depending on the number of categories changing -->
        <% for (let category of categories) { %>
        <option value="<%= category %>"><%= category %></option>
        <% } %>
      </select>
      <button>Submit</button>
    </form>
  </body>
</html>
